<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rv_title_and_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView
            android:id="@+id/iv_fbc_title_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_filter_list_black_24dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_fbc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/fbc_dialog_title"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/iv_fbc_title_icon"
            android:layout_toRightOf="@+id/iv_fbc_title_icon"
            android:layout_toEndOf="@+id/iv_fbc_title_icon" />

        <Button
            android:id="@+id/btn_add_category"
            style="@style/MaterialButton"
            android:background="@drawable/click_effect_rb"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <!--

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_custom_list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft = "24dp"
        android:paddingRight = "24dp"/>

    -->

    <RelativeLayout
        android:id="@+id/rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@android:color/holo_blue_light">

        <Button
            android:id="@+id/btn_fbc_cancel"
            style="@style/DialogBottomButton"
            android:text="@string/btn_cancel_text"
            android:layout_toLeftOf="@+id/btn_fbc_ok"
            android:layout_toStartOf="@+id/btn_fbc_ok"/>

        <Button
            android:id="@+id/btn_fbc_ok"
            style="@style/DialogBottomButton"
            android:text="@string/btn_ok_text"
            android:layout_alignTop="@+id/btn_fbc_cancel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>